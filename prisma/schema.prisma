// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_LINK")
}

model User {
  id                  Int       @id @default(autoincrement())
  login               String    @unique
  hashedPassword      String
  recently_downloaded Content[]
  role                Role      @default(user)
  createAt            DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  token               String?   @unique
  tokenExpires        DateTime?
  tokenCreatedAt      DateTime? @default(now())
}

enum Role {
  admin
  user
}

model Content {
  id         Int                @id @default(autoincrement())
  cover_url  String
  title      String
  body       String
  published  Boolean            @default(false)
  author     User               @relation(fields: [author_id], references: [id])
  author_id  Int
  versions   MinecraftVersion[]
  categories Categories[]
  files      Files[]
  developer  String?
}

model Files {
  id         Int     @id @default(autoincrement())
  content    Content @relation(fields: [content_id], references: [id])
  content_id Int
  path       String  @unique
}

model MinecraftVersion {
  id                Int       @id @default(autoincrement())
  version_full_name String    @unique
  loader            String
  content           Content[]
  optifine          Boolean   @default(false)
}

model ContentType {
  id      String @id @unique
  name_ru String
}

model Categories {
  id      Int       @id @default(autoincrement())
  content Content[]
}
